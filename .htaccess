<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Servir les fichiers existants normalement
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Rediriger toutes les autres requêtes vers index.html
    RewriteRule ^ index.html [L]

    # Optionnel : gestion des erreurs 404
    ErrorDocument 404 /index.html
</IfModule>

<IfModule mod_deflate.c>
    # Activer gzip pour les fichiers texte
    AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css text/javascript application/javascript application/json application/xml application/xhtml+xml application/rss+xml application/atom+xml
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

<IfModule mod_expires.c>
    ExpiresActive On

    # Mise en cache longue pour JS, CSS, images, polices
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType application/x-javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"

    # Pas de cache pour index.html pour toujours récupérer la dernière version
    <FilesMatch "index.html">
        ExpiresActive Off
        FileETag None
        Header set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
    </FilesMatch>
</IfModule>

<IfModule mod_headers.c>
    # Ajouter un en-tête pour forcer la mise en cache côté navigateur
    <FilesMatch "\.(css|js|png|jpg|jpeg|gif|svg|woff|woff2|ttf)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
</IfModule>
